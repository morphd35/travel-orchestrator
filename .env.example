# Travel Orchestrator Environment Variables
# Copy this file to .env.local and fill in your actual values

# Amadeus API - Get from https://developers.amadeus.com
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here
# Use https://api.amadeus.com for production, https://test.api.amadeus.com for testing
AMADEUS_HOST=https://api.amadeus.com

# Booking Mode - 'partner' routes to airlines, 'direct' handles transactions
NEXT_PUBLIC_BOOKING_MODE=partner

# SendGrid Email API - Get from https://sendgrid.com
SENDGRID_API_KEY=your_sendgrid_api_key_here

# JWT Secret for authentication - Generate a random secret
JWT_SECRET=your_jwt_secret_here

# Optional APIs
VIATOR_API_KEY=voyagebuddy-21
SKYSCANNER_API_KEY=your_skyscanner_key_here
